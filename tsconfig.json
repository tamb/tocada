{
    "compilerOptions": {
        "target": "es6",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        },
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
